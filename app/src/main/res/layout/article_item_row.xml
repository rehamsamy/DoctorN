<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_margin="8dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:id="@+id/article_img_id"
            android:src="@drawable/doctor"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="center"
            />

        <TextView
            android:id="@+id/article_text_value_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/privacy_policy_subject"
            android:textAlignment="viewStart"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/article_img_id"
            android:padding="10dp"
            android:maxLines="2"
            android:ellipsize="end"/>

        <LinearLayout
            android:id="@+id/linear_ar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/article_text_value_id"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:gravity="end"
            android:visibility="visible"
            >

            <TextView
                android:id="@+id/commebt_count_id_ar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/like_count"
                android:layout_marginStart="5dp"
                />

            <ImageView
                android:id="@+id/comment_img_ar"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/comment"
                android:layout_marginStart="8dp"/>

            <TextView
                android:id="@+id/like_count_id_ar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/like_count"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="10dp"
                />


            <ImageView
            android:id="@+id/like_img_ar"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/like_gray"/>


        </LinearLayout>


        <LinearLayout
            android:visibility="gone"
            android:id="@+id/layout_en"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/article_text_value_id"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:gravity="end"
            >

            <ImageView
                android:id="@+id/like_img_en"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/like_gray"/>

            <TextView
                android:id="@+id/like_count_id_en"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/like_count"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                />

            <ImageView
                android:id="@+id/comment_img_en"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/comment"
                android:layout_marginStart="15dp"/>

            <TextView
                android:id="@+id/commebt_count_id_en"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/like_count"
                android:layout_marginStart="8dp"
                />


        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>