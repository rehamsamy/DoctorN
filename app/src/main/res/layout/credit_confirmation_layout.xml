<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/con_root"
    android:padding="10dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="240dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/edit_round">

            <ImageView
                android:id="@+id/wait_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="40dp"
                android:scaleType="center"
                android:src="@drawable/protfolio"
                />

            <TextView
                android:id="@+id/confirm_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/wait_img"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                android:text="@string/credit_msg"
                />
        </android.support.constraint.ConstraintLayout>

        <Button
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:background="@drawable/button_purple"
            android:textColor="@color/White"
            android:text="@string/continu"
            android:textAllCaps="false"
            android:layout_gravity="bottom|center_horizontal"
            android:id="@+id/continu_btn"
            android:elevation="32dp"
            android:textSize="18sp"

            />


    </FrameLayout>

</android.support.constraint.ConstraintLayout>