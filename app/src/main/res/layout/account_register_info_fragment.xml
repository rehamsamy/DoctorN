<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="5dp"
        android:id="@+id/card_view">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/update_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
           >

            <TextView
                android:id="@+id/user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account_email_txt"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/user_email_value_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/user_email"
                app:layout_constraintTop_toTopOf="@id/user_email"
                android:text="@string/email_value"
                android:layout_marginStart="20dp"
                />


            <TextView
                android:id="@+id/user_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account_phone_txt"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/user_email"
                app:layout_constraintStart_toStartOf="@id/user_email"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/user_phone_value_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/user_email_value_id"
                app:layout_constraintTop_toTopOf="@id/user_phone"
                android:text="@string/phone_value"
                android:layout_marginStart="20dp"
                />

            <TextView
                android:id="@+id/user_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account_age_txt"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/user_phone"
                app:layout_constraintStart_toStartOf="@id/user_email"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/user_age_value_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/user_email_value_id"
                app:layout_constraintTop_toTopOf="@id/user_age"
                android:text="@string/age_value"
                android:layout_marginStart="20dp"
                />


            <TextView
                android:id="@+id/user_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account_gender_txt"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/user_age"
                app:layout_constraintStart_toStartOf="@id/user_email"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/user_gender_value_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/user_email_value_id"
                app:layout_constraintTop_toTopOf="@id/user_gender"
                android:text="@string/gender_value"
                android:layout_marginStart="20dp"
                />

            <ImageView
                android:id="@+id/arrow_ar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_left_blue"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textAlignment="viewStart"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/arrow_eng"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/arrow_img"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textAlignment="viewStart"
                android:visibility="gone"/>
        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cn1"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/card_view"
            app:layout_constraintTop_toBottomOf="@id/card_view"
            app:layout_constraintEnd_toEndOf="@id/card_view"
            android:background="@drawable/button_background"
            android:padding="10dp"
            android:elevation="8dp"


            >

            <TextView
                android:id="@+id/change_password_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/change_password"
                android:textSize="14sp"
                android:textColor="@color/black"
                />

            <ImageView
                android:id="@+id/arrow_ar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_left_blue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textAlignment="viewStart"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/arrow_eng1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/arrow_img"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textAlignment="viewStart"
                android:visibility="gone"/>

        </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cn4"
        android:layout_marginTop="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/card_view"
        app:layout_constraintTop_toBottomOf="@id/cn3"
        app:layout_constraintEnd_toEndOf="@id/card_view"
        android:background="@drawable/button_background"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:elevation="8dp">

       <TextView
           android:id="@+id/account_balance_id"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"
           android:text="@string/account_balance"
           android:textSize="14sp"
           android:textColor="@color/black"
           />

        <ImageView
            android:id="@+id/arrow_ar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_left_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAlignment="viewStart"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/arrow_eng2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/arrow_img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="viewStart"
            android:visibility="gone"/>

    </android.support.constraint.ConstraintLayout>



    <android.support.constraint.ConstraintLayout
        android:id="@+id/cn2"
        android:layout_marginTop="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/card_view"
        app:layout_constraintTop_toBottomOf="@id/cn1"
        app:layout_constraintEnd_toEndOf="@id/card_view"
        android:background="@drawable/button_background"
        android:padding="10dp"
        android:elevation="8dp">

        <TextView
            android:id="@+id/account_setting_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/account_setting"
            android:textSize="14sp"
            android:textColor="@color/black"
            />

        <ImageView
            android:id="@+id/arrow_ar3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_left_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAlignment="viewStart"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/arrow_eng3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/arrow_img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="viewStart"
            android:visibility="gone"/>

    </android.support.constraint.ConstraintLayout>



    <android.support.constraint.ConstraintLayout
        android:id="@+id/cn3"
        android:layout_marginTop="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/card_view"
        app:layout_constraintTop_toBottomOf="@id/cn2"
        app:layout_constraintEnd_toEndOf="@id/card_view"
        android:background="@drawable/button_background"
        android:padding="10dp"
        android:elevation="8dp"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:id="@+id/account_logout_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/log_out"
            android:textSize="14sp"
            android:textColor="@color/black"
            />

        <ImageView
            android:id="@+id/arrow_ar4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_left_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAlignment="viewStart"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/arrow_eng4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/arrow_img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="viewStart"
            android:visibility="gone"/>
    </android.support.constraint.ConstraintLayout>




</android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>