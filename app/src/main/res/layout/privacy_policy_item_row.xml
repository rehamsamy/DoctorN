<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gree"
    android:padding="10dp"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/privacy_policy_label_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/blue"
        android:text="@string/privecy_label"
        android:textSize="16sp"
        />


    <TextView
        android:id="@+id/privacy_policy_subject_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/privacy_policy_label_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/privacy_policy_label_id"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="15dp"
        android:text="@string/privacy_policy_subject"
        android:ellipsize="end"
        android:textAlignment="viewStart"/>

</android.support.constraint.ConstraintLayout>